# exit i3 (logs you out of your X session)
bindsym $mod+Shift+e exec "i3-nagbar -t warning -m 'You pressed the exit shortcut. Do you really want to exit i3? This will end your X session.' -b 'Yes, exit i3' 'i3-msg exit'"

# resize window (you can also use the mouse for that)
mode "resize" {
        # These bindings trigger as soon as you enter the resize mode

        # Pressing left will shrink the window’s width.
        # Pressing right will grow the window’s width.
        # Pressing up will shrink the window’s height.
        # Pressing down will grow the window’s height.
        bindsym j resize shrink width 10 px or 10 ppt
        bindsym k resize grow height 10 px or 10 ppt
        bindsym l resize shrink height 10 px or 10 ppt
        bindsym odiaeresis resize grow width 10 px or 10 ppt

        # same bindings, but for the arrow keys
        bindsym Left resize shrink width 10 px or 10 ppt
        bindsym Down resize grow height 10 px or 10 ppt
        bindsym Up resize shrink height 10 px or 10 ppt
        bindsym Right resize grow width 10 px or 10 ppt

        # back to normal: Enter or Escape
        bindsym Return mode "default"
        bindsym Escape mode "default"
}

bindsym $mod+r mode "resize"

# Start i3bar to display a workspace bar (plus the system information i3status
# finds out, if available)
bar {
        status_command i3status
	position top
}

# Volume up and down
bindsym XF86AudioRaiseVolume exec --no-startup-id pamixer -i 2
bindsym $mod+F3 exec --no-startup-id pamixer -i 2
bindsym XF86AudioLowerVolume exec --no-startup-id pamixer -d 2
bindsym $mod+F2 exec --no-startup-id pamixer -d 2
bindsym XF86AudioMute exec --no-startup-id pamixer -t

# Microphone mute toggle
bindsym XF86AudioMicMute exec --no-startup-id pamixer --source 1 -t

# Brightness up and down
bindsym XF86MonBrightnessUp exec --no-startup-id bash ~/.config/i3/brightness.sh +5
bindsym XF86MonBrightnessDown exec --no-startup-id bash ~/.config/i3/brightness.sh -5

# Lock screen
bindsym $mod+l exec "i3lock -c 000000"

# Suspend
# see https://wiki.archlinux.org/title/Power_management#Suspend_and_hibernate
bindsym XF86PowerOff exec "pamixer -m; i3lock -c 000000; systemctl suspend-then-hibernate"
bindsym Shift+XF86PowerOff exec "pamixer -m; i3lock -c 000000; systemctl suspend"

# Printscreen
bindsym Print exec "maim ~/Screenshots/$(date +'%Y%m%d_%H-%M-%S').png -s; thunar ~/Screenshots/"
bindsym Shift+Print exec "maim ~/Screenshots/$(date +'%Y%m%d_%H-%M-%S').png -s -d 2; thunar  ~/Screenshots/"
bindsym $mod+Shift+S exec "maim -s --format png /dev/stdout | xclip -in -selection clipboard -t image/png"

# Firefox shortcut ThinkVantage button 
bindsym XF86Launch1 exec firefox 

# Play/Pause/Next/Previous Fn control keys
bindsym $mod+F12 exec "dbus-send --print-reply --dest=org.mpris.MediaPlayer2.spotify /org/mpris/MediaPlayer2 org.mpris.MediaPlayer2.Player.Next"
bindsym $mod+F9 exec "dbus-send --print-reply --dest=org.mpris.MediaPlayer2.spotify /org/mpris/MediaPlayer2 org.mpris.MediaPlayer2.Player.Next"
bindsym $mod+space exec "dbus-send --print-reply --dest=org.mpris.MediaPlayer2.spotify /org/mpris/MediaPlayer2 org.mpris.MediaPlayer2.Player.PlayPause"

